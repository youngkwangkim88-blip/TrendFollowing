{
  // VS Code Python Debug 구성 (JSONC: 주석 허용)
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: 현재 파일 실행",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true
    },
    {
      "name": "Download: KOSPI MCAP100 (quick test)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/download_krx_ohlcv_panel.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true,
      "args": [
        "--universe", "kospi_mcap100",
        "--bars", "5000",
        "--max-tickers", "5",
        "--sleep", "0.1",
        "--out", "${workspaceFolder}/data/kospi_mcap100_adj_5000_test.csv"
      ]
      // 가능한 옵션 예시:
      // "args": [
      //   "--universe", "krx100",              // krx100 | kospi_mcap100
      //   "--bars", "5000",                    // 종목별 보관할 일봉 개수
      //   "--end", "20260210",                 // YYYYMMDD, 미지정 시 최근 거래일 자동탐색
      //   "--max-tickers", "20",               // 빠른 테스트용 제한
      //   "--sleep", "0.3",                    // 요청 간 대기(초)
      //   "--out", "${workspaceFolder}/data/out.csv"
      // ]
    },
    {
      "name": "Download: KRX100 (full)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/download_krx_ohlcv_panel.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true,
      "args": [
        "--universe", "krx100",
        "--bars", "5000",
        "--sleep", "0.3"
      ]
    },
    {
      "name": "Backtest: sample_005930 (기본)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/toy_005930_backtest.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true,
      "args": [
        "--csv", "${workspaceFolder}/data/sample_005930.csv",
        "--entry-rule", "A_20_PL",
        "--outdir", "${workspaceFolder}/outputs"
      ]
    },
    {
      "name": "Backtest: sample_005930 + plot",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/toy_005930_backtest.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true,
      "args": [
        "--csv", "${workspaceFolder}/data/sample_005930.csv",
        "--entry-rule", "A_20_PL",
        "--plot",
        "--outdir", "${workspaceFolder}/outputs"
      ]
    },
    {
      "name": "Backtest: full dataset (12y)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/toy_005930_backtest.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "justMyCode": true,
      "args": [
        "--csv", "${workspaceFolder}/data/kospi_top100_ohlc_12y.csv",
        "--entry-rule", "A_20_PL",
        "--outdir", "${workspaceFolder}/outputs"
      ]
    }
  ]
}
